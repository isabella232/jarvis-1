{
  "name": "@harness/jarvis",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "files": [
    "bin",
    "lib"
  ],
  "bin": {
    "jest-grouped-coverage": "bin/jest-grouped-coverage.js",
    "jest-text-coverage-reporter": "bin/jest-text-coverage-reporter.js",
    "clean-css-types": "bin/clean-css-types.js",
    "typecheck-staged": "bin/typecheck-staged.sh"
  },
  "scripts": {
    "lint": "eslint --ext .ts --ext .tsx src",
    "pretty": "prettier src --check --ignore-unknown",
    "test": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib",
    "prepublishOnly": "yarn build",
    "build": "yarn clean && ./build.sh && tsc && copyfiles -e '**/*.ts' -u 1 'src/**/*.*' lib",
    "postbuild": "prettier src --write --ignore-unknown",
    "prepare": "husky install"
  },
  "peerDependencies": {},
  "dependencies": {
    "ajv": "^8.6.1",
    "better-ajv-errors": "^0.7.0",
    "chalk": "^4.1.1",
    "copyfiles": "^2.4.1",
    "globby": "^11.0.4",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "multimatch": "^5.0.0",
    "tslib": "^2.3.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/lodash": "^4.14.171",
    "@types/mkdirp": "^1.0.2",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-json-schema-generator": "^0.94.1",
    "typescript": "^4.3.5"
  },
  "optionalDependencies": {
    "webpack": "^5.40.0"
  },
  "engines": {
    "node": ">=13.8.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "sh bin/typecheck-staged.sh",
      "prettier --check"
    ],
    "*.scss": [
      "prettier --check"
    ]
  }
}
